---
/**
 * Simple Test Component - Minimal client-side test
 * 
 * This is the most basic possible test to see if ANY client-side JavaScript works.
 */
---

<div class="simple-test p-4 bg-yellow-100 border border-yellow-400 rounded">
  <h3 class="font-bold text-yellow-800 mb-2">Simple Client-Side Test</h3>
  <button id="simple-button" class="px-4 py-2 bg-yellow-500 text-white rounded">
    Simple Test Button
  </button>
  <p id="simple-result" class="mt-2 text-yellow-700">No JavaScript executed yet</p>
</div>

<script>
  // This script should run immediately when the page loads
  console.log('ðŸŸ¡ Simple script loaded (no client directive)');
  
  document.addEventListener('DOMContentLoaded', function() {
    console.log('ðŸŸ¡ DOM loaded event fired');
    
    const button = document.getElementById('simple-button');
    const result = document.getElementById('simple-result');
    
    if (button && result) {
      result.textContent = 'âœ… JavaScript is working!';
      
      button.addEventListener('click', function() {
        result.textContent = 'ðŸŽ‰ Button click works!';
        console.log('ðŸŸ¡ Simple button clicked');
      });
    }
  });
</script>

<script client:load>
  // This script should run with client:load directive
  console.log('ðŸ”µ Client:load script executed');
  
  setTimeout(() => {
    const result = document.getElementById('simple-result');
    if (result) {
      result.textContent += ' + Client:load works!';
    }
  }, 100);
</script>

